@model IEnumerable<ParsingProjectMVC.Models.KuyuGrubuModel>

<div class="text-center">
    <h1 class="display-4">Kuyu Grupları</h1>

    <div class="text-right mb-3">
        <form asp-action="Create" method="post" class="form-inline">
            <input type="text" name="kuyuGrubuAdi" class="form-control mr-2" placeholder="New Kuyu Grubu Adı" required />
            <button type="submit" class="btn btn-success">Add New Kuyu Grubu</button>
        </form>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kuyu Grubu Adı</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kuyuGrubu in Model)
            {
                <tr>
                    <td>@kuyuGrubu.Id</td>
                    <td>@kuyuGrubu.KuyuGrubuAdi</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@kuyuGrubu.Id" class="btn btn-primary btn-sm">Update</a>
                        <form asp-action="Delete" asp-controller="KuyuGruplari" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@kuyuGrubu.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">X</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Math.Ceiling((double)ViewBag.TotalItems / ViewBag.PageSize); i++)
        {
            <li class="page-item @(ViewBag.PageNumber == i ? "active" : "")">
                <a class="page-link" href="/KuyuGruplari/Index?pageNumber=@i&pageSize=@ViewBag.PageSize">@i</a>
            </li>
        }
    </ul>
</nav>
